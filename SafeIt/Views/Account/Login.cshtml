@model SafeIt.Models.UserLoginModel

@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_LoginLayout.cshtml"; 
}

<div class="col-4 mx-auto" style="margin-top: 15% !important">
        <form asp-action="Login">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="text-center my-3">
            @*<img src="/images/login.png" width="100" height="100"/>*@
            </div>
            <div>
                <h4 class="text-center"> 
                Please sign in
                </h4>
            </div>

            <div class="form-group col-12 my-1">
                <label asp-for="Email" class="control-label required"></label>
                <input type="email" asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group col-12 my-1">
                <label asp-for="Password" class="control-label required"></label>
                <input type="password" asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            <div class="row my-2">
                <div class="col-8">                    
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" value="" id="flexCheckDefault" onchange="Toggle()">
                        <label class="form-check-label" for="flexCheckDefault" >
                            Show Password
                        </label>
                    </div>
                    </div>
                        <div class="col-4"><a href="#">Forgot Password?</a></div>
                    </div>
            </div>
            <div class="form-group">
                <div class="d-grid gap-2">
                <input type="submit" value="Login" class="btn btn-primary my-3" />
                </div>
            </div>
        </form>
    </div>
</div>
<script src="https://code.jquery.com/jquery-3.6.0.min.js" integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4=" crossorigin="anonymous"></script>
<script>
    const Toggle = () => {
        var temp = document.getElementById("Password");
        if (temp.type === "password") temp.type = "text";
        else temp.type = "password";
    }
</script>